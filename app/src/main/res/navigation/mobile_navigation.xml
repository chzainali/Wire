<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.wire.user.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_navigation_home_to_machineDetailsFragment"
            app:destination="@id/machineDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.example.wire.user.fragments.BookingFragment"
        android:label="@string/title_booking"
        tools:layout="@layout/fragment_booking" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.wire.user.fragments.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/machineDetailsFragment"
        android:name="com.example.wire.user.fragments.MachineDetailsFragment"
        android:label="fragment_machine_details"
        tools:layout="@layout/fragment_machine_details" />
</navigation>