<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivMachine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/washing_machine"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_toEndOf="@+id/ivMachine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMachineName"
                    android:layout_toStartOf="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Washing Machine"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/yellow"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvBrandName"
                android:layout_toStartOf="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:layout_marginEnd="5dp"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvColor"
                    android:layout_toStartOf="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="normal"/>

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</androidx.cardview.widget.CardView>